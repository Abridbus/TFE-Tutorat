@{
    ViewBag.Title = "Cours";
}
@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("/Scripts/registerScripts.js")"></script>
}
        <!-- AJOUT POUR LES COURS -->
<hr />
<h2>Inscription aux cours et ajout des résultats</h2>
<hr />

<h4>Concernant les étudiants <b>demandeur</b> </h4>
<p>Dans cette page vous pourrez remplir les cours que vous avez <b>cette</b> année ainsi que les résultats s'y rapportant si vous en avez, sinon laisser le champ Cote vide.</p>
<p>C'est dans cette liste que vous pourrez choisir les cours pour vos futurs demandes de tutorats</p>
<br />

<h4>Concernant les étudiants candidats <b>tuteur</b> </h4>
<p>Remplissez dans cette page les cours que vous avez la possibilité et/ou aimeriez donner. </p>
<p>Ajoutez-y les cotes s'y rapportant, même si celles-ci sont inférieurs aux résultats nécessaires pour donner un tutorat.</p>
<p>Vous pourrez, dans la page d'offre de tutorat, ajouter un commentaire à l'attention de Madame Allen.</p>
<br />


@using (Ajax.BeginForm("Cours", "Eperso", new AjaxOptions()
{
    //HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "dane"
}))
{

    <div class="dropdown ">
        <div class="form-group">
            <div class="col-md-2 control-label">
                Choix du cours :
            </div>
            <div class="dropdown-toggle col-md-5">
                @Html.DropDownList("DDCours")
            </div>
            <div class="col-md-5">
                Cote :
                @Html.TextBox("coteCours", "", new { @type = "number", @min = "0", @max = "20" })

                <span style="cursor:pointer; color:green;" onclick="addNew();">ADD</span>
                <span style="cursor:pointer; color:red;" class="delete" onclick="remove(this)">REMOVE</span>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clonecontainer"></div>
    <input type="submit" value="Soumettre" onclick="reload()"/>
}

