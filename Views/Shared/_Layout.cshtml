<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    @RenderSection("JavaScript", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EPHEC - ePerso", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <!-- Afficher uniquement si l'utilisateur est connecté -->
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="#" data-toggle="dropdown">ePerso<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Explications", "Explications", "Eperso")</li>
                                <li>@Html.ActionLink("Mes infos", "Info", "Eperso")</li>
                                <li>@Html.ActionLink("Mes Cours", "Cours", "Eperso")</li>
                            </ul>
                        </li>

                        <li>
                            <a href="#" data-toggle="dropdown">Tutorat<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Explications", "Explications", "Tutorat")</li>
                                <li>@Html.ActionLink("Guide Pratique", "GuidePratique", "Tutorat")</li>
                                <li>@Html.ActionLink("Demande", "Demande", "Tutorat")</li>
                                <li>@Html.ActionLink("Offre", "Offre", "Tutorat")</li>
                                <li>@Html.ActionLink("Mes Prestations", "MesPrestations", "Tutorat")</li>
                            </ul>
                        </li>

                        if (Context.User.IsInRole("SAR"))
                        {
                            <li>
                                <a href="#" data-toggle="dropdown">Tutorats étudiants<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Explications", "Explications", "GestionTutorat")</li>
                                    <li>@Html.ActionLink("Demandes Tutorat", "DemandesTutorat", "GestionTutorat")</li>
                                    <li>@Html.ActionLink("Tutorat en cours", "TutoratEnCours", "GestionTutorat")</li>
                                    <li>@Html.ActionLink("Tutorat Fini", "TutoratFini", "GestionTutorat")</li>
                                    <li>@Html.ActionLink("Gestion des prestations", "GestionPrestationsUn", "GestionTutorat")</li>
                                </ul>
                            </li>
                        }
                    }
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EPHEC - ePerso</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
